{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js"
  ],
  "moduleFileExtensions": ["js", "json"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": false
}